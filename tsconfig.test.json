{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Use Vitest, not Jest; add Vite + MDX ambient types */
    "types": ["vitest/globals", "vite/client", "mdx"],

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src",
    "src/**/*.test.*",
    "src/__tests__/**/*",
    "vitest.setup.ts",
    "vite-env.d.ts"
  ]
}
