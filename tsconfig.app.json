{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",            // ✅ must be ESNext/Preserve for bundler
    "moduleResolution": "bundler", // ✅
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__/**", "**/*.test.*", "vitest.setup.*", "dist", "node_modules"]
}
